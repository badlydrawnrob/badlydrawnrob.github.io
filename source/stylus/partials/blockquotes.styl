blockquote
  color: $color.ddd
  font-style: normal
  margin-left: -($spacing.one)
  padding-left: $spacing.one
  border-left: $spacing.px solid $color.dd

  p
    margin: 0
    + p
      margin-top: $spacing.base

  cite
    font-style: italic
    font-size: $font.size.base
    color: $color.ddd

    a
      color: $color.dd
