.gl-Header
  margin: 0
  padding: $spacing.one $spacing.base
  font-family: $font.family.base
  font-weight: normal
  font-size: $font.size.ppp
  color: $color.wwww
  line-height: $line.height.ppp
  text-transform: none
  letter-spacing: normal
  background: $color.theme.p
  box-shadow: 0 1px 3px alpha(#000, 12%), 0 1px 2px alpha(#000, 24%)

  @media (min-width: $screen.md)
    font-size: $font.size.ppppp
    line-height: 1
    padding: $spacing.ppp $spacing.base $spacing.base
