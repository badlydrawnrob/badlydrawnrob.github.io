// Call to action section ======================================================

.gl-CTA
  padding: $spacing.base 0
  border-top: $spacing.px solid $color.l

  @media print
    display: none

  @supports (display: grid)
    @media screen and (min-width: $screen.medium)
      grid-column: 1 / span 5
      grid-row: 5

.gl-CTA_Note
  margin: 0
  font-family: $font.family.mono

  @supports (display: grid)
    @media screen and (min-width: $screen.medium)
      max-width: $col.main
      margin: 0 auto

.gl-CTA_Button
  display: block
  padding: $spacing.one
  color: $color.ddd
  font-family: $font.family.mono
  text-align: center
  text-decoration: none
  text-transform: uppercase
  background: $color.lll
  border: $spacing.micro solid $color.ddd
  border-radius: $border.radius

  @media screen and (min-width: $screen.medium)
    display: inline-block
    text-align: left

  &:hover,
  &:focus
    color: $color.lll
    background: $color.ddd

  abbr
    text-decoration: none

.gl-CTA_Icon
  .gl-CTA_Button:hover &
    color: $color.sss

.gl-CTA_NoteExtra
  display: none

  @media screen and (min-width: $screen.medium)
    display: inline



// Footer section ==============================================================
// #1: Hide footer when printing

.gl-Footer
  @media print
    display: none  // #1

  @supports (display: grid)
    @media screen and (min-width: $screen.medium)
      grid-column: 1 / span 5
      grid-row: 6

.gl-Footer_Wrapper
  padding: $spacing.base $spacing.one
  margin-left: -($spacing.one)
  margin-right: -($spacing.one)
  background: alpha($color.p, 20%)
  border-top: $spacing.px solid $color.l

  & + &
    background: $color.ddd

  @supports (display: grid)
    @media screen and (min-width: $screen.medium)
      margin: 0
      padding: $spacing.base 0


.gl-Social
  @supports (display: grid)
    @media screen and (min-width: $screen.medium)
      max-width: $col.main
      margin: 0 auto

.gl-Social_Note
  // pass

.gl-Social_List
  margin: 0

.gl-Social_Item
  list-style: none

.gl-Social_Link
  color: $color.ddd
  text-decoration: underline

  &:hover,
  &:focus
    color: $color.sss


.gl-Strapline
  @supports (display: grid)
    @media screen and (min-width: $screen.medium)
      max-width: $col.main
      margin: 0 auto

.gl-Strapline_Note
  margin-bottom: 0
  color: $color.lll
  font-family: $font.family.mono
  font-size: $font.size.mm
  letter-spacing: $font.tracking.pppp

.gl-Strapline_Link
  color: $color.lll
  text-decoration: underline

  &:hover,
  &:focus
    color: $color.sss
