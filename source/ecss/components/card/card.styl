// Notes =======================================================================
// #1: 16:9 ratio: http://bit.ly/2rKQS4r
//     != Doesn't align properly with component-grid()
// #2: Vertical absolute positioning: http://bit.ly/2rR0NJs
// #3: Compensate for 24px icon

.gl-Card
  border-radius: $border.radius
  box-shadow: 0 1px 3px alpha(#000, 12%), 0 1px 2px alpha(#000, 24%)

  @media (min-width: $screen.md)
    border-radius: 0

.gl-Card_Figure
  position: relative
  width: 100%  // #1
  height: 56.25%  // #1
  background: $color.llll
  border-top-left-radius: $border.radius
  border-top-right-radius: $border.radius

  @media (min-width: $screen.md)
    border-radius: 0

.gl-Card_Image
  width: 100%
  height: 56.25%
  object-fit: cover

.gl-Card_ProfileImage
  position: absolute // #2
  top: $spacing.one
  left: $spacing.one
  width: ($spacing.half * 13)
  height: ($spacing.half * 13)
  background-color: $color.theme.s
  border-radius: 50%
  object-fit: cover

  @media (min-width: $screen.sm)
    top: 0
    left: 0
    bottom: 0
    right: 0
    margin: auto $spacing.one
    width: ($spacing.half * 25)
    height: ($spacing.half * 25)

.gl-Card_Header
  margin-bottom: 0
  font-size: $font.size.pp
  line-height: $line.height.pp

  .code &
    color: $color.wwww

.gl-Card_SubHeader
  margin-bottom: $spacing.one
  color: $color.bbb
  font-size: $font.size.m
  font-weight: 700
  line-height: $line.height.m

  .code &
    color: $color.www

.gl-Card_Section
  padding: 0 $spacing.one

  @media (min-width: $screen.md)
    padding: 0 $spacing.base

  &-actions
    display: flex
    justify-content: flex-end
    padding: 0 $spacing.quarter

  &-more
    display: none

.gl-Card_Text
  color: $color.bbb
  font-size: $font.size.m
  line-height: $line.height.m

  .code &
    color: $color.wwww

.gl-Card_Button
  display: inline-block
  min-width: 0
  padding: ($spacing.quarter + $spacing.micro)
  color: $color.bbbb
  vertical-align: middle
  white-space: nowrap
  cursor: pointer
  background-color: transparent
  border: none
  border-radius: 50%
  box-shadow: none

  &:hover
    background-color: $color.theme.p
  &:active
    background-color: $color.theme.p
    box-shadow: none

.gl-Card_ButtonIcon
  width: $spacing.base  // #3
  height: $spacing.base  // #3
