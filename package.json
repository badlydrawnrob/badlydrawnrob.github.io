{
  "name": "robmcdonald",
  "version": "2.4.1",
  "description": "Personal portfolio",
  "main": "index.html",
  "scripts": {
    "test": "which pandoc",
    "test-specimen": "pandoc --template=./source/pandoc/specimen.html -c ../build/style/portfolio.css -s ./source/testing/specimen.md -o ./__testing/specimen.html",
    "test-home": "pandoc --template=./source/pandoc/testing.html -c ../build/style/portfolio.css -s ./source/testing/*.md -o ./__testing/*.html",

    "css": "npx lessc ./source/style/main.less ./build/style/portfolio.css",

    "home": "pandoc --template=./source/pandoc/template.html -c ./build/style/portfolio.css -s ./source/pages/home.md -o ./index.html",
    "contact": "pandoc --template=./source/pandoc/template.html -c ./build/style/portfolio.css -s ./source/pages/contact.md -o ./contact.html",
    "ozaria": "pandoc --template=./source/pandoc/template.html -c ./build/style/portfolio.css -s ./source/pages/ozaria.md -o ./ozaria.html",

    "words-orbit": "pandoc --template=./source/pandoc/template.html -c ../build/style/portfolio.css ./source/words/orbit.md -s -o ./words/orbit.html",
    "words-css": "pandoc --template=./source/pandoc/template.html -c ../build/style/portfolio.css ./source/words/css-golden-rules-for-stylesheets.md -s -o ./words/css-golden-rules-for-stylesheets.html",
    "words-wait": "pandoc --template=./source/pandoc/template.html -c ../build/style/portfolio.css ./source/words/wait-stop-coding-check-your-data-first.md -s -o ./words/wait-stop-coding-check-your-data-first.html",

    "prebuild": "mkdir -p build/ build/style",
    "build": "npm run css && npm run home && npm run contact && npm run ozaria",
    "postbuild": "echo Portfolio: successfully compiled!"
  },
  "repository": {
    "type": "git",
    "url": "git+https://badlydrawnrob@github.com/badlydrawnrob/badlydrawnrob.github.io.git"
  },
  "author": "Rob McDonald",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/badlydrawnrob/badlydrawnrob.github.io/issues"
  },
  "homepage": "https://github.com/badlydrawnrob/badlydrawnrob.github.io#readme",
  "false": {},
  "devDependencies": {
    "less": "^4.3.0",
    "print-first-css": "github:badlydrawnrob/print-first-css#bab8ee7"
  }
}
